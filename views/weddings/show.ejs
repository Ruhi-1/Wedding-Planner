<body style="background-image: url(https://i.imgur.com/lkKoZ5s.png);">
    <header>
        <div class="navbar navbar-light" style="background-color: rgb(117, 79, 79)">
            <a href="/" class="brand-logo left">Home</a>
            <a href="/guests" class="brand-logo center">lists</a>
            <a href="/guests/new">Guests Names</a>
        </div>
    </header>
    <br>
    <h2>Names</h2>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Delete</th>
                <th>Function</th>
            </tr>
        </thead>
        <tbody>

            <% console.log(guest); %>

            <% guest.weddings.forEach(function(n, idx) { %>
            
                    <tr>
                        <form action="/weddings/<%= n._id %>?_method=DELETE&guest_id=<%=guest.id%>" method="POST" class="delete-form">
                            <th><button type="submit">X</button></th>
                        </form>
                        <th><%= n.names %></th>
                    </tr>
            <% }); %>
            
        </tbody>
  </table>
  
  <% if(guest.weddings.length < 3) { %>
    <a href="/weddings/new?guest_id=<%= guest._id %>">Add Event</a>
    <% }; %>